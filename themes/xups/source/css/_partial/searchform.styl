.search-form
  position relative
  padding 10px 70px 0 0
  .form-control
    display block
    width 100%
    padding 5px 5px 5px 10px
    border 2px solid c-ddd
    border-right 0
    outline 0
    box-shadow 2px 2px 4px rgba(0, 0, 0, .07) inset
  .btn
    position absolute
    top 10px
    right 0
    width 70px
